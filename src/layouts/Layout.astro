---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
</head>
<body class="container max-w-[1080px] mx-auto p-4 bg-[#0C0F1E] text-[#F3F0E1]">
			<slot />
</body>
</html>
